<?xml version="1.0"?>
<bodypart derive_from="normal_face">
    <pick_priority>200</pick_priority>
    <conditions>
        <condition>
            <face_is_bestial>1</face_is_bestial>
        </condition>
    </conditions>
    <modifiers>
        <scale_y>0.75</scale_y>
        <positions_scale_y>1.33</positions_scale_y>
    </modifiers>
    <positions derive_type="merge_by_id">
        <position id="hair">
            <type>hair</type>
            <modifiers>
                <scale_y>0.75</scale_y>
            </modifiers>
            <point>50%;3</point>
        </position>
        <position id="top_ears">
            <type>ear</type>
            <point>165;35</point>
        </position>
        <position id="top_ear_left">
            <type>ear</type>
            <point>80;88</point>
        </position>
        <position id="top_ear_right">
            <type>ear</type>
            <modifiers>
                <inverse_x>1</inverse_x>
            </modifiers>
            <point>252;88</point>
        </position>
        <position id="eye_left">
            <type>eye</type>
            <required>1</required>
            <multiple>
                <rows_count_param>eye_pairs</rows_count_param>
                <output_mode>line</output_mode>
                <max_distance>50;50</max_distance>
                <secondary_priority_inc>0.1</secondary_priority_inc>
                <offset>15;-20</offset>
            </multiple>
            <modifiers>
                <scale>0.75</scale>
            </modifiers>
            <point>32;301</point>
        </position>
        <position id="eye_right">
            <type>eye</type>
            <required>1</required>
            <multiple>
                <rows_count_param>eye_pairs</rows_count_param>
                <output_mode>line</output_mode>
                <max_distance>50;-50</max_distance>
                <secondary_priority_inc>0.1</secondary_priority_inc>
                <offset>-15;-20</offset>
            </multiple>
            <modifiers>
                <scale>0.75</scale>
                <inverse_x>1</inverse_x>
            </modifiers>
            <point>303;301</point>
        </position>
    </positions>
</bodypart>