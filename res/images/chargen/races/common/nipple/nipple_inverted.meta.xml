<?xml version="1.0"?>
<bodypart derive_from="nipple_base">
    <scale>1.0</scale>
    <conditions>
        <condition>
            <nipple_shape>inverted</nipple_shape>
        </condition>
    </conditions>
    <positions>
        <position id="nipple_areola">
            <type>nipple</type>
            <draw_mode>use_parent_parent_alpha</draw_mode>
